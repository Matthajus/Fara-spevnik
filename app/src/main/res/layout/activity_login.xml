<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".LoginActivity">


    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/fara_logo"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardLoginEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/logoImageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#BCBCBC"
        app:cardCornerRadius="25dp"
        app:cardElevation="15dp"
        >

    <EditText
        android:id="@+id/loginEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/logoImageView"
        android:layout_centerHorizontal="true"

        android:background="#FAFAFA"
        android:drawableStart="@drawable/ic_action_user"
        android:ems="10"
        android:hint="Prihlasovacie meno"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardPasswordEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@id/cardLoginEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#BCBCBC"
        app:cardCornerRadius="25dp"
        app:cardElevation="15dp"
        >
    <EditText
        android:id="@+id/passwordEditText"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/cardLoginEditText"
        android:layout_centerHorizontal="true"
        android:background="#FAFAFA"
        android:drawableStart="@drawable/ic_action_password"
        android:ems="10"
        android:hint="Heslo"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_below="@id/cardPasswordEditText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#BCBCBC"
        app:cardCornerRadius="25dp"
        app:cardElevation="15dp"
        >

        <RelativeLayout
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="clickOnLoginButton">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prihlásiť"
                android:textSize="20dp"
                android:textColor="#111"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>